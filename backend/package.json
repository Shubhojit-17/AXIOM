{
  "name": "axiom-backend",
  "version": "1.0.0",
  "description": "AXIOM - HTTP 402 Pay-Per-Request API Marketplace Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "npx prisma db push && node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "prisma db push --force-reset && tsx src/db/seed.ts",
    "setup": "pnpm install && pnpm prisma generate && pnpm prisma db push && pnpm tsx src/db/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@stacks/network": "^6.17.0",
    "@stacks/transactions": "^6.17.0",
    "@stacks/wallet-sdk": "^6.17.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "form-data": "^4.0.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
